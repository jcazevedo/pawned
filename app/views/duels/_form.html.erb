<%= simple_form_for([@tournament, @round, @duel], :html => {:class => 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :white_player, :label_method => lambda { |player| "#{player.given_name}" } %>
    <%= f.association :black_player, :label_method => lambda { |player| "#{player.given_name}" } %>
    <%= f.input :white_result %>
    <%= f.input :black_result %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
