<p id="notice"><%= notice %></p>

<p>
  <b>Tournament:</b>
  <%= @round.tournament_id %>
</p>

<p>
  <b>Tournament round:</b>
  <%= @round.tournament_round_id %>
</p>


<table class="table">
  <tr>
    <th>Date inserted</th>
    <th>Date played</th>
    <th>White</th>
    <th>Black</th>
    <th>White result</th>
    <th>Black result</th>
    <th>Round</th>
    <th>Pgn text</th>
    <th></th>
    <% if can? :manage, @tournament %>
      <th></th>
      <th></th>
    <% end %>
  </tr>

<% @round.matches.each do |match| %>
  <tr>
    <td><%= match.date_inserted %></td>
    <td><%= match.date_played %></td>
    <td><%= match.white_id %></td>
    <td><%= match.black_id %></td>
    <td><%= match.white_result %></td>
    <td><%= match.black_result %></td>
    <td><%= match.round_id %></td>
    <td><%= match.pgn_text %></td>
    <td><%= link_to 'Show', tournament_round_match_path(@tournament, @round, match) %></td>
    <% if can? :manage, @tournament %>
      <td><%= link_to 'Edit', edit_tournament_round_match_path(@tournament, @round, match) %></td>
      <td><%= link_to 'Destroy', tournament_round_match_path(@tournament, @round, match), confirm: 'Are you sure?', method: :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>


<% if can? :manage, @tournament %>
  <%= link_to 'Create new match', new_tournament_round_match_path(@tournament, @round) %> |
  <%= link_to 'Edit', edit_tournament_round_path(@tournament, @round) %> |
<% end %>
<%= link_to 'Back', tournament_path(@tournament) %>
