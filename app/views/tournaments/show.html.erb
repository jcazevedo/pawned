<div class="page-header">
  <h1><%= @tournament.name %></h1>
</div>

<div class="tabbable">
  <ul id='tournament-tabs' class="nav nav-tabs">
    <% %w[overview standings rounds].each do |tab| %>
      <li class="<%= @tab.eql?(tab) ? 'active' : '' %>">
        <%= link_to tab.humanize, send("#{tab}_tournament_path"), {data: {"tab-id" => "##{tab}"}} %>
      </li>
    <% end %>
  </ul>

  <div class="tab-content">
    <% %w[overview standings rounds].each do |tab| %>
      <div class="tab-pane <%= @tab.eql?(tab) ? 'active' : '' %>" id="<%= tab %>">
        <% if @tab.eql?(tab) %>
          <%= render tab.to_s %>
        <% else %>
          <p>
            Loading..
          </p>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<div class="form-actions">
  <%= link_to 'Back', tournaments_path, :class => "btn" %>
</div>
